{
  "name": "cryptotrend-glass",
  "version": "1.1.0",
  "description": "Liquid-glass crypto trend app (Electron) \u2014 live BTC/ETH/SOL from Binance with fallback",
  "main": "main.js",
  "author": "you",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -w portable"
  },
  "build": {
    "appId": "com.yourdomain.cryptotrendglass",
    "productName": "CryptoTrendGlass",
    "files": [
      "!**/.gitignore",
      "!**/.github",
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        "portable"
      ]
    }
  },
  "devDependencies": {
    "electron": "31.2.1",
    "electron-builder": "24.13.3"
  },
  "dependencies": {}
}